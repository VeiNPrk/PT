<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vnprk.prisontrainings.ActivityMain">
    <Button

        android:id="@+id/btn_start_training"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_text"
        android:layout_marginLeft="@dimen/side_padding_main"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/side_padding_main"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorIcons"
        android:layout_marginStart="@dimen/side_padding_main"
        android:layout_marginEnd="@dimen/side_padding_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.362"
        />

    <Button
        android:id="@+id/btn_statistic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_stat_text"
        android:layout_marginLeft="@dimen/side_padding_main"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/side_padding_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorIcons"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_training"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="@dimen/side_padding_main"
        android:layout_marginEnd="@dimen/side_padding_main" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_about_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_statistic"
        android:layout_marginRight="@dimen/side_padding_main"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/side_padding_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorIcons"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="@dimen/side_padding_main"
        android:layout_marginEnd="@dimen/side_padding_main" />

</android.support.constraint.ConstraintLayout>
